{% extends 'base.html.twig' %}

{% block title %}Alumnos index{% endblock %}

{% block body %}
    <h1>Alumnos CRUD</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Edad</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for alumno in alumnos %}
            <tr>
                <td>{{ alumno.id }}</td>
                <td>{{ alumno.nombre }}</td>
                <td>{{ alumno.apellido }}</td>
                <td>{{ alumno.edad }}</td>
                <td>
                    <a href="{{ path('app_alumnos_show', {'id': alumno.id}) }}">show</a>
                    <a href="{{ path('app_alumnos_edit', {'id': alumno.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_alumnos_new') }}"><button type="button" class="btn btn-primary">Create new</button></a>
    {# <button type="button" class="btn btn-primary"><b href="{{ path('app_alumnos_new') }}">Create new</b></button> #}
{% endblock %}
